{
  "name": "red-tetris",
  "version": "1.0.0",
  "description": "This project, Red Tetris, aims to build a fully functional online, real-time multiplayer Tetris game, developed entirely with Full Stack JavaScript.",
  "main": "index.js",
  "scripts": {
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mehdiakacem/red-tetris.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mehdiakacem/red-tetris/issues"
  },
  "homepage": "https://github.com/mehdiakacem/red-tetris#readme",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
